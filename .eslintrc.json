{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": "off",
        "max-len": "off",
        "comma-dangle": "off",
        "brace-style": "warn",
        "space-before-blocks": "warn",
        "spaced-comment": "warn",
        "indent": "off"
    }
}